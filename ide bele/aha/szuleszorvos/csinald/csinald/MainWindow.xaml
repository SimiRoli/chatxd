<Window x:Class="csinald.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:csinald"
        mc:Ignorable="d"
        Title="ToDo List" Height="350" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="todoTextBox" Grid.Row="0" Margin="10" />
        <ListBox x:Name="todoListBox" Grid.Row="1" Margin="10"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
        <Button Content="Add" Click="AddTodoButton_Click" Margin="5"/>
        <Button Content="Delete" Click="DeleteTodoButton_Click" Margin="5"/>
        <Button Content="Save" Click="SaveButton_Click" Margin="5"/>
        <Button Content="Load" Click="LoadButton_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
